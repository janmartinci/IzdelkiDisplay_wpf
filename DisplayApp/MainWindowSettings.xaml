<Page x:Class="DisplayApp.MainWindowSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:DisplayApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindowSettings">
    <Grid>
        <materialDesign:Card Background="#F6F5F8" UniformCornerRadius="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid Margin="5 5 10 5" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Settings" VerticalAlignment="Center" Width="25" Height="50" Foreground="#FF3A3A3A"/>
                            <TextBlock Margin="5 0 0 0" VerticalAlignment="Center" FontWeight="Bold" FontSize="15" Foreground="#FF3A3A3A" Text="NASTAVITVE"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Button BorderBrush="{x:Null}" Foreground="{x:Null}" Click="CloseMainWindowSettings" Cursor="Hand">
                            <materialDesign:PackIcon Kind="Remove" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#e32b56"/>
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center">
                        <TextBlock Text="Pasice" FontSize="13" Margin="4" FontWeight="Medium"></TextBlock>
                        <Line
                            X1="0" Y1="0" X2="1" Y2="0"
                            Stroke="Gray"
                            StrokeThickness="1"
                            StrokeDashArray="1,2"
                            Stretch="Fill"
                            Margin="4 0 4 10"
                            Width="450"
                            HorizontalAlignment="Left"
                            />
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:Card Margin="4" HorizontalAlignment="Left" Background="#FF3A3A3A" UniformCornerRadius="5" Width="80" Height="20">
                                <TextBlock Text="Lokacija" Margin="5 0 0 0" Foreground="White" VerticalAlignment="Center"></TextBlock>
                            </materialDesign:Card>
                            <materialDesign:Card Margin="4" HorizontalAlignment="Left" Background="#FF3A3A3A" UniformCornerRadius="5" Width="300" Height="20">
                                <TextBlock x:Name="FolderPathText" Text="..." Margin="5 0 0 0" Foreground="White" VerticalAlignment="Center"></TextBlock>
                            </materialDesign:Card>
                            <Button Width="30" Height="20" BorderBrush="{x:Null}" Foreground="{x:Null}" Padding="0" Click="PasiceLokacijeSettingsClick" >
                                <materialDesign:PackIcon Kind="FolderAddOutline" VerticalAlignment="Center" Foreground="#FF31E4BF"/>
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="#FF3A3A3A"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4f4d4d"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        <Line
                            X1="0" Y1="0" X2="1" Y2="0"
                            Stroke="Gray"
                            StrokeThickness="1"
                            StrokeDashArray="1,2"
                            Stretch="Fill"
                            Margin="4 10 4 4"
                            Width="450"
                            HorizontalAlignment="Left"
                            />
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
