<Page x:Class="DisplayApp.MainWindowSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:DisplayApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindowSettings">
    <Page.Resources>
        <ResourceDictionary>
            <Style x:Key="CustomRemoveDisplayStyle" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#999595"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="CusttomButtonAdd" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="#0bdac2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#999595"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="CusttomButtonNastaviteve" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="#cccccc"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#999595"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="ScrollThumbs" TargetType="{x:Type Thumb}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Grid x:Name="Grid">
                                <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" 
                                       Height="Auto" Fill="Transparent"/>
                                <Border x:Name="Rectangle1" CornerRadius="0 0 0 0" HorizontalAlignment="Stretch" 
                                    VerticalAlignment="Stretch" Width="Auto" Height="Auto" 
                                    Background="{TemplateBinding Background}"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Tag" Value="Horizontal">
                                    <Setter TargetName="Rectangle1" Property="Width" Value="Auto"/>
                                    <Setter TargetName="Rectangle1" Property="Height" Value="7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
                <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
                <Setter Property="Foreground" Value="#0bdac2"/>
                <Setter Property="Background" Value="DarkGray"/>
                <Setter Property="Width" Value="10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid x:Name="GridRoot" Width="12" Background="{x:Null}">
                                <Track x:Name="PART_Track" Grid.Row="0" IsDirectionReversed="true" Focusable="False">
                                    <Track.Thumb>
                                        <Thumb x:Name="Thumb" Background="{TemplateBinding Foreground}" 
                                           Style="{DynamicResource ScrollThumbs}"/>
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton x:Name="PageUp" Command="ScrollBar.PageDownCommand" Opacity="0" Focusable="False"/>
                                    </Track.IncreaseRepeatButton>
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton x:Name="PageDown" Command="ScrollBar.PageUpCommand" Opacity="0" Focusable="False"/>
                                    </Track.DecreaseRepeatButton>
                                </Track>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                    <Setter Value="#068a7a" 
                                        TargetName="Thumb" Property="Background"/>
                                </Trigger>
                                <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                    <Setter Value="#068a7a" TargetName="Thumb" Property="Background"/>
                                </Trigger>

                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                                <Trigger Property="Orientation" Value="Horizontal">
                                    <Setter TargetName="GridRoot" Property="LayoutTransform">
                                        <Setter.Value>
                                            <RotateTransform Angle="-90"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter TargetName="PART_Track" Property="LayoutTransform">
                                        <Setter.Value>
                                            <RotateTransform Angle="-90"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Width" Value="Auto"/>
                                    <Setter Property="Height" Value="12"/>
                                    <Setter TargetName="Thumb" Property="Tag" Value="Horizontal"/>
                                    <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand"/>
                                    <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <materialDesign:Card Background="#F6F5F8" UniformCornerRadius="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid Margin="5 5 10 5" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Settings" VerticalAlignment="Center" Width="25" Height="50" Foreground="#FF3A3A3A"/>
                            <TextBlock Margin="5 0 0 0" VerticalAlignment="Center" FontWeight="Bold" FontSize="15" Foreground="#FF3A3A3A" Text="NASTAVITVE"/>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <WrapPanel>
                            <Button Width="45" Margin="0 0 5 0" Cursor="Hand" BorderBrush="{x:Null}" Foreground="{x:Null}" Padding="0" Click="ShraniNastaviteMain" >
                                <materialDesign:PackIcon Height="20" Width="20" Kind="ContentSave" VerticalAlignment="Center" Foreground="#FF31E4BF"/>
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="#FF3A3A3A"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#4f4d4d"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button BorderBrush="{x:Null}" Foreground="{x:Null}" Click="CloseMainWindowSettings" Cursor="Hand">
                                <materialDesign:PackIcon Kind="Remove" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#e32b56"/>
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </WrapPanel>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical" Margin="5 10 5 5" VerticalAlignment="Top">
                        <TextBlock Text="Pasice" FontSize="13" Margin="4" FontWeight="Medium"></TextBlock>
                        <Line
                            X1="0" Y1="0" X2="1" Y2="0"
                            Stroke="Gray"
                            StrokeThickness="1"
                            StrokeDashArray="1,2"
                            Stretch="Fill"
                            Margin="4 0 4 10"
                            Width="450"
                            HorizontalAlignment="Left"
                            />
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:Card Margin="4" HorizontalAlignment="Left" Background="#FF3A3A3A" UniformCornerRadius="5" Height="20">
                                <TextBlock Text="Lokacija" Margin="5 0 5 0" Foreground="White" VerticalAlignment="Center"></TextBlock>
                            </materialDesign:Card>
                            <materialDesign:Card Margin="4" HorizontalAlignment="Left" Background="#FF3A3A3A" UniformCornerRadius="5" Width="300" Height="20">
                                <TextBox x:Name="FolderPathText" IsReadOnly="True" Text="..." BorderBrush="{x:Null}" Padding="5 0 0 0" Background="Transparent" Foreground="White" VerticalAlignment="Center"/>
                            </materialDesign:Card>
                            <Button Width="30" Height="20" BorderBrush="{x:Null}" Foreground="{x:Null}" Padding="0" Click="PasiceLokacijeSettingsClick" >
                                <materialDesign:PackIcon Kind="FolderAddOutline" VerticalAlignment="Center" Foreground="#FF31E4BF"/>
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="#FF3A3A3A"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4f4d4d"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        <Line
                            X1="0" Y1="0" X2="1" Y2="0"
                            Stroke="Gray"
                            StrokeThickness="1"
                            StrokeDashArray="1,2"
                            Stretch="Fill"
                            Margin="4 10 4 4"
                            Width="450"
                            HorizontalAlignment="Left"
                            />
                        <TextBlock Text="Nadzorna plošča" FontSize="13" Margin="4" FontWeight="Medium"></TextBlock>
                        <Line
                            X1="0" Y1="0" X2="1" Y2="0"
                            Stroke="Gray"
                            StrokeThickness="1"
                            StrokeDashArray="1,2"
                            Stretch="Fill"
                            Margin="4 0 4 10"
                            Width="450"
                            HorizontalAlignment="Left"
                            />
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <materialDesign:Card Margin="4" HorizontalAlignment="Left" Background="#FF3A3A3A" UniformCornerRadius="5" Height="20">
                                <TextBlock Text="Barva" Margin="5 0 5 0" Foreground="White" VerticalAlignment="Center"></TextBlock>
                            </materialDesign:Card>
                            <xctk:ColorPicker x:Name="colorPickerNadzornaPlosca" ShowStandardColors="False" AvailableColorsHeader="Ssadasd" StandardTabHeader="Barve" RecentColorsHeader="sss" AdvancedTabHeader="Barva po izbiri" AvailableColorsSortingMode="Alphabetical" SelectedColorChanged="ColorPicker_NadzornaPlosca" Width="50"/>
                        </StackPanel>
                        <Line
                            X1="0" Y1="0" X2="1" Y2="0"
                            Stroke="Gray"
                            StrokeThickness="1"
                            StrokeDashArray="1,2"
                            Stretch="Fill"
                            Margin="4 10 4 4"
                            Width="450"
                            HorizontalAlignment="Left"
                            />
                        <TextBlock Text="Nadzorno okno (Promocijskih oken)" FontSize="13" Margin="4" FontWeight="Medium"></TextBlock>
                        <Line
                            X1="0" Y1="0" X2="1" Y2="0"
                            Stroke="Gray"
                            StrokeThickness="1"
                            StrokeDashArray="1,2"
                            Stretch="Fill"
                            Margin="4 0 4 10"
                            Width="450"
                            HorizontalAlignment="Left"
                            />
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <materialDesign:Card Margin="4" HorizontalAlignment="Left" Background="#FF3A3A3A" UniformCornerRadius="5" Height="20">
                                <TextBlock Text="Pisava/Ikone" Margin="5 0 5 0" Foreground="White" VerticalAlignment="Center"></TextBlock>
                            </materialDesign:Card>
                            <xctk:ColorPicker x:Name="colorPickerText" Margin="4" ShowStandardColors="False" AvailableColorsHeader="Ssadasd" StandardTabHeader="Barve" RecentColorsHeader="sss" AdvancedTabHeader="Barva po izbiri" SelectedColorChanged="ColorPicker_Text" AvailableColorsSortingMode="Alphabetical" Width="50"/>
                        </StackPanel>
                        <StackPanel x:Name="stackPanelDisplay" Margin="10" HorizontalAlignment="Left">
                            <!-- Title Display -->
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:Card Background="White" Width="200">
                                    <Grid x:Name="HeaderKontrolnoOkno">
                                        <TextBlock Foreground="{Binding TextColor}" Text="Ekran X" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Padding="5" FontWeight="SemiBold"/>
                                        <Button Background="Transparent" Style="{StaticResource CustomRemoveDisplayStyle}" VerticalAlignment="Top" HorizontalAlignment="Right">
                                            <materialDesign:PackIcon Kind="Times" Width="15" Height="15" Margin="2" FontWeight="SemiBold" Foreground="Red"/>
                                        </Button>
                                    </Grid>
                                </materialDesign:Card>
                                <xctk:ColorPicker x:Name="colorPickerHeader" Margin="4" ShowStandardColors="False" AvailableColorsHeader="Ssadasd" StandardTabHeader="Barve" RecentColorsHeader="sss" SelectedColorChanged="ColorPicker_HeaderKontrolnoOkno" AdvancedTabHeader="Barva po izbiri" AvailableColorsSortingMode="Alphabetical" Width="50"/>
                            </StackPanel>

                            <!-- Informacije Display -->
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:Card Background="White" Margin="0,5" Width="200">
                                    <StackPanel x:Name="BodyKontrolnoOKno">
                                        <WrapPanel VerticalAlignment="Center">
                                            <TextBlock Foreground="{Binding TextColor}" Text="Znamka" FontSize="15" Padding="5" VerticalAlignment="Center"/>
                                        </WrapPanel>
                                        <WrapPanel VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Image" Width="25" Height="25" VerticalAlignment="Center" Foreground="{Binding TextColor}"/>
                                            <TextBlock Foreground="{Binding TextColor}" Text="X" FontSize="15" Padding="5" VerticalAlignment="Center"/>
                                        </WrapPanel>
                                    </StackPanel>
                                </materialDesign:Card>
                                <xctk:ColorPicker x:Name="colorPickerBody" Margin="4" ShowStandardColors="False" AvailableColorsHeader="Ssadasd" StandardTabHeader="Barve" RecentColorsHeader="sss" SelectedColorChanged="ColorPicker_BodyKontrolnoOKno" AdvancedTabHeader="Barva po izbiri" AvailableColorsSortingMode="Alphabetical" Width="50"/>
                            </StackPanel>

                            <!-- Button Display -->
                            <StackPanel>
                                <materialDesign:Card Background="#0BDAC2" HorizontalAlignment="Left" Width="200">
                                    <WrapPanel x:Name="KontrolnoOknoButtonPanel">
                                        <!-- Open Button -->
                                        <Button Width="100" Style="{StaticResource CusttomButtonAdd}">
                                            <Grid x:Name="ButtonKortrolnoOknoOpen">
                                                <Border Width="100" Height="30" BorderBrush="Yellow" BorderThickness="2" CornerRadius="5" Opacity="0"/>
                                                <materialDesign:PackIcon Tag="TextKontrolnoOkno"  Kind="OpenInApp" Width="25" Height="25" Foreground="{Binding TextColor}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Grid>
                                        </Button>
                                        <!-- Settings Button -->
                                        <Button Width="100" Style="{StaticResource CusttomButtonNastaviteve}">
                                            <Grid x:Name="ButtonKontrolnoOknoSettings">
                                                <Border Width="100" Height="30" BorderBrush="Yellow" BorderThickness="2" CornerRadius="5" Opacity="0"/>
                                                <materialDesign:PackIcon Tag="TextKontrolnoOkno" Kind="Settings" Width="25" Height="25" Foreground="{Binding TextColor}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Grid>
                                        </Button>
                                    </WrapPanel>
                                </materialDesign:Card>
                                <StackPanel Orientation="Horizontal" Width="200" HorizontalAlignment="Left">
                                    <Grid Width="100">
                                        <xctk:ColorPicker x:Name="colorPickerButtonOpen" Margin="4" ShowStandardColors="False" AvailableColorsHeader="Ssadasd" StandardTabHeader="Barve" RecentColorsHeader="sss" SelectedColorChanged="ColorPicker_ButtonKortrolnoOknoOpen" AdvancedTabHeader="Barva po izbiri" AvailableColorsSortingMode="Alphabetical" Width="50"/>
                                    </Grid>
                                    <Grid Width="100">
                                        <xctk:ColorPicker x:Name="colorPickerButtonSettings" Margin="4" ShowStandardColors="False" AvailableColorsHeader="Ssadasd" StandardTabHeader="Barve" RecentColorsHeader="sss" SelectedColorChanged="ColorPicker_ButtonKontrolnoOknoNastavitve" AdvancedTabHeader="Barva po izbiri" AvailableColorsSortingMode="Alphabetical" Width="50"/>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2">
                   
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
