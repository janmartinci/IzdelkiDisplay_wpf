<Page x:Class="DisplayApp.Oglas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:DisplayApp"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1000"
      Title="Oglas">

    <Grid>
        <materialDesign:Card Background="#F6F5F8" UniformCornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.7*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Grid.Row="1">
                    <materialDesign:Card Background="#FF3A3A3A" Width="300" Height="480" UniformCornerRadius="10">
                        <StackPanel>
                            <ComboBox x:Name="znamkaComboBox" IsEditable="True" IsReadOnly="True" Text="Izberi znamko" materialDesign:HintAssist.Hint="Select an Oglas" Margin="10" FontSize="16" Foreground="Black" Background="#FF2D2D2D" SelectionChanged="znamkaComboBox_SelectionChanged" MouseDown="znamkaComboBox_MouseLeftButtonDown">
                                <ComboBoxItem Content="Apacer"/>
                                <ComboBoxItem Content="Arzopa"/>
                                <ComboBoxItem Content="Aten"/>
                                <ComboBoxItem Content="Bachmann"/>
                                <ComboBoxItem Content="Baseus"/>
                                <ComboBoxItem Content="Datech"/>
                                <ComboBoxItem Content="Delock"/>
                                <ComboBoxItem Content="Digitus"/>
                                <ComboBoxItem Content="EZVIZ"/>
                                <ComboBoxItem Content="FNIRSI"/>
                                <ComboBoxItem Content="GMKtec"/>
                                <ComboBoxItem Content="HiLook"/>
                                <ComboBoxItem Content="Joyroom"/>
                                <ComboBoxItem Content="KELine"/>
                                <ComboBoxItem Content="Leviton"/>
                                <ComboBoxItem Content="Logitech"/>
                                <ComboBoxItem Content="Mikrotik"/>
                                <ComboBoxItem Content="SBOX"/>
                                <ComboBoxItem Content="Teltonika"/>
                                <ComboBoxItem Content="Tenda"/>
                                <ComboBoxItem Content="TP-Link"/>
                                <ComboBoxItem Content="Triton"/>
                                <ComboBoxItem Content="Tecnoware"/>
                                <ComboBoxItem Content="UBIQUITI"/>
                                <ComboBoxItem Content="White Shark"/>
                            </ComboBox>
                            <TextBox x:Name="SearchBox" VerticalAlignment="Center" Margin="10 0 10 0" Foreground="White" CaretBrush="White" TextChanged="SearchBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                        <TextBlock x:Name="Placeholder"
                                                                   Text="Išči..."
                                                                   Foreground="Gray"
                                                                   Margin="0,0,0,0"
                                                                   VerticalAlignment="Center"
                                                                   IsHitTestVisible="False"
                                                                   />
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Grid Background="#FF3A3A3A" Height="165">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="9*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="55*"/>
                                </Grid.ColumnDefinitions>
                                <ListBox Margin="5,5,5,5" BorderBrush="{x:Null}" ItemsSource="{Binding ItemsView}" x:Name="ArtikliListBox" Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="3" SelectionChanged="ArtikliListBox_SelectionChanged">

                                </ListBox>
                            </Grid>
                            <Grid>
                                <StackPanel>
                                    <Border BorderBrush="White" BorderThickness="0 0.5 0 0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="14" Margin="10" Text="Izbrano: "/>
                                            <TextBox x:Name="izbrani_artikel" IsReadOnly="True" VerticalAlignment="Center" Foreground="White" CaretBrush="White">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="TextBox">
                                                                    <Grid>
                                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                                        <TextBlock x:Name="Placeholder"
                                                                   Text=""
                                                                   Foreground="White"
                                                                   Margin="0,0,0,0"
                                                                   VerticalAlignment="Center"
                                                                   IsHitTestVisible="False"
                                                                   Width="180"
                                                                   />
                                                                    </Grid>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </StackPanel>
                                    </Border>
                                    <Border BorderBrush="White" BorderThickness="0 0 0 0.5" Margin="0 0 0 8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="14" Margin="10" Text="Šifra artikla:"/>
                                            <TextBox x:Name="shifra_artikla" IsReadOnly="True" VerticalAlignment="Center" Foreground="White" CaretBrush="White">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="TextBox">
                                                                    <Grid>
                                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                                        <TextBlock x:Name="Placeholder"
                                                                   Text=""
                                                                   Foreground="White"
                                                                   Margin="0,0,0,0"
                                                                   VerticalAlignment="Center"
                                                                   IsHitTestVisible="False"
                                                                   Width="180"
                                                                   />
                                                                    </Grid>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock x:Name="QRKoda" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="14" Margin="10 0 10 10" Text="QR Koda:"></TextBlock>
                                    <TextBox x:Name="qr_koda" VerticalAlignment="Center" Margin="10 0 10 0" Foreground="White" CaretBrush="White" TextChanged="qr_koda_TextChanged">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Grid>
                                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                                <TextBlock x:Name="Placeholder"
                                                                   Text="Vnesi link artikla (Spletno mesto)"
                                                                   Foreground="Gray"
                                                                   Margin="0,0,0,0"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Left"
                                                                   IsHitTestVisible="False"
                                                                   Width="180"
                                                                   />
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                    <CheckBox x:Name="CenaArtiklaCheckBox" Content="Prikaži ceno" Margin="10" Foreground="White" Visibility="Collapsed"/>
                                    <CheckBox x:Name="PasicaNovo" Content="Pasica novo" Margin="10" Foreground="White" Visibility="Visible"/>
                                    <CheckBox x:Name="Dodaj_video" Content="Dodaj video" Margin="10" Foreground="White" Visibility="Collapsed"/>
                                    <TextBox x:Name="Video_url" VerticalAlignment="Center" Margin="10 0 10 0" Foreground="White" CaretBrush="White" TextChanged="Video_url_TextChanged" Visibility="Hidden">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Grid>
                                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                                <TextBlock x:Name="Placeholder"
                                                                   Text="Vnesi URL posnetka"
                                                                   Foreground="Gray"
                                                                   Margin="0,0,0,0"
                                                                   VerticalAlignment="Center"
                                                                   HorizontalAlignment="Left"
                                                                   IsHitTestVisible="False"
                                                                   Width="180"
                                                                   />
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </StackPanel>
                            </Grid>
                            <Button Content="Dodatne nastavitve" Width="300" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 10 0 0" Click="Button_Click">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="DarkGray"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4f4d4d"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Dodaj izdelek" Width="300" Height="30" x:Name="DodajIzdelek_Gumb" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 0" Click="DodajIzdelek_Gumb_Click">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="Green"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4f4d4d"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
                <Grid Grid.Column="1">
                    <materialDesign:Card Height="480" Margin="0 0 10 0" x:Name="izbraniPanel" Background="White" Visibility="Visible" Panel.ZIndex="0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                                <TextBlock VerticalAlignment="Center" Foreground="Black" FontWeight="Bold" FontSize="14" Margin="10 10 0 10" Visibility="Collapsed" Text="Ime oglasa: "/>
                                <Border x:Name="BorderCustomIme" BorderBrush="Gray" BorderThickness="1" Height="25" >
                                    <TextBox x:Name="CustomIme" IsReadOnly="False" VerticalAlignment="Center" Foreground="Black" CaretBrush="Gray" TextChanged="CustomIme_TextChanged" >
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Grid>
                                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                                                <TextBlock x:Name="Placeholder"
                                                                   Text="Vnesi ime oglasa..."
                                                                   Foreground="Gray"
                                                                   Margin="2,0,0,0"
                                                                   VerticalAlignment="Center"
                                                                   IsHitTestVisible="False"
                                                                   Width="300"
                                                                   />
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Border>
                            </StackPanel>
                            <ListBox
                                x:Name="IzbraniArtikliListBox"
                                ItemsSource="{Binding ItemsView}"
                                Margin="5"
                                Height="400"
                                Background="Transparent"
                                BorderBrush="{x:Null}"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Item content -->
                                            <TextBlock
                                                Grid.Column="0"
                                                Text="{Binding IzdelekID}"
                                                VerticalAlignment="Center"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="5 0 0 0"
                                                Text="{Binding IzdelekIme}"
                                                VerticalAlignment="Center"
                                                TextWrapping="Wrap" />
                                            
                                            <!-- Remove button -->
                                            <Button
                                                Grid.Column="2"
                                                Content="✕"
                                                Margin="10,0,0,0"
                                                Padding="6,2"
                                                Background="Transparent"
                                                Foreground="Red"
                                                BorderBrush="{x:Null}"
                                                Cursor="Hand"
                                                Command="{Binding DataContext.RemoveItemCommand,
                                                                  RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                CommandParameter="{Binding}" Click="Button_Click_1" />
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Button Content="Shrani" Width="100" Height="25" x:Name="Shrani_Gumb" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 0" Click="Shrani_Gumb_Click">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Background" Value="Green"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Button}">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4f4d4d"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </materialDesign:Card>
                    <materialDesign:Card Height="480" Margin="0 0 10 0" x:Name="Nastavitve_DodatneOglas" Background="#FF3A3A3A" Visibility="Collapsed" Panel.ZIndex="1">
                        <StackPanel>
                            <TextBlock Text="Kratek opis:" Foreground="White" Margin="10 10 0 0"/>
                            <!-- Toolbar for RichTextBox editing -->
                            <StackPanel Orientation="Horizontal" Margin="10,0,10,0" VerticalAlignment="Top" Background="#FF2D2D2D">
                                <Button Command="EditingCommands.ToggleBold" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="B" FontWeight="Bold" Width="30" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Button Command="EditingCommands.ToggleItalic" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="I" FontStyle="Italic" Width="30" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Button Command="EditingCommands.ToggleUnderline" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="U" Width="30" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Button Command="EditingCommands.ToggleBullets" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="•" Width="30" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Button Command="EditingCommands.ToggleNumbering" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="1." Width="30" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Separator Margin="6,0" Width="1" Background="Gray"/>
                                <Button Command="ApplicationCommands.Undo" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="↶" Width="30" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Button Command="ApplicationCommands.Redo" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="↷" Width="30" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Separator Margin="6,0" Width="1" Background="Gray"/>
                                <Button Command="ApplicationCommands.Cut" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="Cut" Width="40" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Button Command="ApplicationCommands.Copy" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="Copy" Width="45" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Button Command="ApplicationCommands.Paste" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="Paste" Width="45" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Separator Margin="6,0" Width="1" Background="Gray"/>
                                <Button Command="EditingCommands.IncreaseFontSize" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="A+" Width="35" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                                <Button Command="EditingCommands.DecreaseFontSize" CommandTarget="{Binding ElementName=KratekOpisTextBox}" Content="A-" Width="35" Margin="2" Foreground="White" Background="#FF3A3A3A"/>
                            </StackPanel>
                            <RichTextBox x:Name="KratekOpisTextBox" Height="400" Margin="10" Foreground="White" Background="#FF2D2D2D"/>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
