<Window x:Class="DisplayApp.VideoPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisplayApp"
        mc:Ignorable="d"
        SizeChanged="Window_SizeChanged" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" MouseLeftButtonDown="Window_MouseLeftButtonDown" KeyDown="Window_KeyDown" MouseDoubleClick="Window_MouseDoubleClick" Loaded="Window_Loaded"
        Title="VideoPlayer" Height="450" Width="800">
    <Grid>
        <MediaElement Name="Video"
              Source="video.mp4"
              LoadedBehavior="Manual"
              UnloadedBehavior="Stop"
              Stretch="Uniform" />
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="MainScaleTransform"/>
        </Grid.LayoutTransform>
    </Grid>
</Window>
